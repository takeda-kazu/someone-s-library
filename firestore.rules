rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // 書籍: 読み取りは誰でも可、書き込みは認証ユーザーのみ
    match /books/{bookId} {
      allow read: if true;
      allow write: if request.auth != null;
      
      // 読みたい: 読み書き誰でも可（匿名対応）
      match /wantToRead/{docId} {
        allow read, write: if true;
      }
      
      // コメント: 読み書き誰でも可（匿名対応）
      match /comments/{commentId} {
        allow read, write: if true;
      }
    }
  }
}
